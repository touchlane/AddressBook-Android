<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.touchlane.addressbook.domain.model.DomainContact" />
    </data>

    <com.touchlane.addressbook.ui.widgets.TextSection
        android:id="@+id/item_section"
        style="@style/TextSection"
        app:maxSectionLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@{vm.firstName + ' ' + vm.lastName}"/>
</layout>